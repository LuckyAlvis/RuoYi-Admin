<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysBookMapper">

    <resultMap id="SysBookResult" type="com.ruoyi.system.domain.SysBook">
        <id property="id" column="id"/>
        <result property="storedFileId" column="stored_file_id"/>
        <result property="title" column="title"/>
        <result property="author" column="author"/>
        <result property="wordCount" column="word_count"/>
        <result property="pageCount" column="page_count"/>
        <result property="description" column="description"/>
        <result property="uploaderUserId" column="uploader_user_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="insert" parameterType="com.ruoyi.system.domain.SysBook" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_book(stored_file_id, title, author, word_count, page_count, description, uploader_user_id, created_at, updated_at)
        VALUES (#{storedFileId}, #{title}, #{author}, #{wordCount}, #{pageCount}, #{description}, #{uploaderUserId}, NOW(), NOW())
    </insert>

    <select id="selectById" parameterType="long" resultMap="SysBookResult">
        SELECT * FROM sys_book WHERE id = #{id}
    </select>

    <delete id="deleteByStoredFileId" parameterType="long">
        DELETE FROM sys_book WHERE stored_file_id = #{storedFileId}
    </delete>

</mapper>
